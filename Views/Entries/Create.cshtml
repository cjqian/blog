@model Blog.Models.Entry

@{
    ViewData["Title"] = "Create";
}

<div class="create-container">
<form asp-action="Create">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
                <input class="title-input"  asp-for="Title"/>
                <br/>
                <span asp-validation-for="Title" class="text-danger" />
        </div>

        <div class="form-group">
            <label asp-for="Content" class="col-md-2 control-label"></label>
                <textarea asp-for="Content" class="content-input"></textarea>
                <center><span asp-validation-for="Content" class="text-danger" /></center>
        </div>

        <div class="form-group">
            <label asp-for="IsPublic" class="col-md-2 control-label"></label>
                <input asp-for="IsPublic" type="checkbox" />
                <span asp-validation-for="IsPublic" class="text-danger" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
